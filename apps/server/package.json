  "dependencies": {
    "@colyseus/monitor": "^0.15.22",
    "@colyseus/schema": "^2.0.27",
    "@colyseus/ws-transport": "^0.15.25",
    "@didactic-robot/shared": "workspace:*",
    "@didactic-robot/types": "workspace:*",
    "colyseus": "^0.15.25",
    "express": "^4.19.2",
    "nanoid": "^5.0.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.16.11",
    "eslint": "^8.57.1",
    "prettier": "^3.3.3",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
